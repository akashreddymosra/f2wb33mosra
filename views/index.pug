extends layout

block content
  h1= title
  a(href="/cars") Cars Page
  br
  p Welcome to #{title}
  button(type='button', class='btn btn-warning', onclick='doBump()') Press Me
  br
  div#bump Bump the count 
  br
  script.
      var count=0;
      var bump=1;
      function doBump(){
      count=count+bump;
      bump=bump+1;
      print=document.getElementById("bump");
      print.innerHTML='Count '+count+' with bump '+bump;}
